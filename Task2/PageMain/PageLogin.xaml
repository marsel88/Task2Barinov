<Page x:Class="Task2.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task2.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageLogin"
      Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">Логин</Label>
            <TextBox Foreground="Black" x:Name="loginTB" Width="180" Height="25" PreviewTextInput="TextValidationTB"/>
            <Label FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">Пароль</Label>
            <TextBox Foreground="Black" x:Name="passwordTB" Width="180" Height="25" PreviewTextInput="NumberValidationTB"/>
            <StackPanel>
                <Button x:Name="authBT" Width="100" Height="25" Content="Войти" Margin="10" Click="authBT_Click"/>
                <Button x:Name="regBT" Width="100" Height="25" Content="Регистрация" Margin="10" Click="regBT_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
